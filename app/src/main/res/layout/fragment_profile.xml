<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.general.ProfileFragment"
    android:padding="@dimen/sixteen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/StyleTextViewTitles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_my_profile"></TextView>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_image_profile"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:src="@drawable/avatar_patient"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/colorAccent" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_name_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_face_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_name_profile"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_name"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_lastname_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/last_name"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_face_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_last_name_profile"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotDropDownForms"
            android:id="@+id/til_identification_type_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/identification_type"
            app:startIconDrawable="@drawable/ic_identification_black"
            app:errorEnabled="true">

            <AutoCompleteTextView
                android:id="@+id/edit_identification_type_profile"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_identification_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/identification"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_identification_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_identification_profile"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            style="@style/StyleLinearLayoutGenderForms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_wc_black"></com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/StyleLabelGenderForms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/gender"></TextView>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_gender_profile"
            style="@style/StyleRadioGroupForms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_female_profile"
                style="@style/StyleRadioButtonForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/female" />

            <RadioButton
                android:id="@+id/rb_male_profile"
                style="@style/StyleRadioButtonForms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/male" />
        </RadioGroup>

        <LinearLayout
            style="@style/StyleLinearLayoutBirthDateForms"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/StyleTextInputLayotTextBoxForms"
                android:id="@+id/til_date_birth_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_calendar_black"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_date_birth_profile"
                    style="@style/StyleTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:hint="@string/date_birth_ps" />
            </com.google.android.material.textfield.TextInputLayout>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_date_birth_profile"
                style="@style/StyleCircleImageViewCalendarForms"
                android:layout_width="85dp"
                android:layout_height="85dp" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_native_city_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/native_city"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_nature_people_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_native_city_profile"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_phone_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_phone_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_phone_profile"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotDropDownForms"
            android:id="@+id/til_department_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/department"
            app:startIconDrawable="@drawable/ic_landscape_black"
            app:errorEnabled="true">

            <AutoCompleteTextView
                android:id="@+id/edit_department_profile"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_actual_city_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/actual_city"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_location_city_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_actual_city_profile"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_address_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/address"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_home_black_24dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_address_profile"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_email_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/email"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_mail_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_email_profile"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_user_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/user_name"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_user_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_user_profile"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_password_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/password"
            app:endIconMode="password_toggle"
            app:startIconDrawable="@drawable/ic_key_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_password_profile"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_diagnostic_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/diagnostic"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_assignment_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/StyleTextInputEditText"
                android:id="@+id/edit_diagnostic_patient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            style="@style/StyleLinearLayoutBirthDateForms"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/StyleTextInputLayotTextBoxForms"
                android:id="@+id/til_diagnosis_date_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/date_diagnostic"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_calendar_black"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_diagnosis_date_profile"
                    style="@style/StyleTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:enabled="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_date_diagnosis_profile"
                style="@style/StyleCircleImageViewCalendarForms"
                android:layout_width="85dp"
                android:layout_height="85dp"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_profession_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_work_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/StyleTextInputEditText"
                android:id="@+id/edit_profession_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/profession_ps"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_workplace_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_local_convenience_store_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/StyleTextInputEditText"
                android:id="@+id/edit_workplace_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/admin_til_workplace" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--
        <com.google.android.material.textfield.TextInputLayout
            style="@style/StyleTextInputLayotTextBoxForms"
            android:id="@+id/til_observation_pro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/observations"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_edit_black"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_observation_patient"
                style="@style/StyleTextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_update_profile"
            style="@style/StylePrimaryColoredButton"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/ten"
            android:text="@string/update"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>