<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/diez"
    app:cardElevation="@dimen/cinco">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/diez"
        >
        <LinearLayout
            android:layout_width="@dimen/docientos"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >

            <ImageView
                android:id="@+id/admin_plantilla_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/noventa"
                android:src="@drawable/avatar_patient" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/cinco">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/diez"
                    android:text="@string/admin_user_name"
                    android:textSize="@dimen/quincetext"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/diez"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/admin_id"
                    android:paddingLeft="@dimen/diez"
                    android:textSize="@dimen/quincetext" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/admin_enter"
                    android:textAlignment="center"
                    android:textSize="@dimen/quincetext" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/diez"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/admin_place"
                    android:paddingLeft="@dimen/diez"
                    android:textSize="@dimen/quincetext" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/admin_enter"
                    android:textAlignment="center"
                    android:textSize="@dimen/quincetext" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/diez"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/admin_profession"
                    android:paddingLeft="@dimen/diez"
                    android:textSize="@dimen/quincetext" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/admin_enter"
                    android:textAlignment="center"
                    android:textSize="@dimen/quincetext" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/docientos"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >

            <ImageView
                android:id="@+id/admin_plantilla_btn_delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/noventa"
                android:src="@drawable/ic_delete" />
        </LinearLayout>


    </LinearLayout>

