<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LoginAdmin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:layout_marginBottom="@dimen/Treinta" />

            <EditText
                android:id="@+id/login_admin_edt_name"
                android:layout_marginTop="@dimen/quince"
                android:layout_marginBottom="@dimen/quince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/admin_user_name" />

            <EditText
                android:id="@+id/login_admin_edt_pass"
                android:layout_marginTop="@dimen/quince"
                android:layout_marginBottom="@dimen/quince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/admin_pass" />

            <Button
                android:id="@+id/login_admin_btn_enter"
                android:layout_marginTop="@dimen/Treinta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Azul"
                android:text="@string/admin_enter"
                />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>