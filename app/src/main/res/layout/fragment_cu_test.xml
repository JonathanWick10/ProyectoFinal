                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/test9"/>


            <Button
                android:id="@+id/tq10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_below="@+id/t9"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="left"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:enabled="true"
                android:visibility="gone"
                android:text="@string/tq10"></Button>
            <com.codesgood.views.JustifiedTextView
                android:id="@+id/t10"
                android:layout_below="@+id/tq10"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/test10"/>
            </RelativeLayout>

                <LinearLayout
                    android:id="@+id/element1"
                    android:layout_below="@+id/cont_test"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_qualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/blackDark"
                        android:layout_marginEnd="@dimen/twentyFive"
                        android:layout_marginStart="@dimen/twentyFive"
                        android:textSize="@dimen/twenty"
                        android:text="@string/qualification">
                    </TextView>

                    <EditText
                        android:id="@+id/point_qualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/txt_qualification"
                        android:layout_centerVertical="true"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textSize="@dimen/twenty"
                        android:layout_marginEnd="@dimen/twentyFive"
                        android:layout_marginBottom="39dp"
                        android:hint="@string/point"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/of10"
                        android:textColor="@color/blackDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/twenty"
                        android:layout_alignParentBottom="true"
                        android:textSize="@dimen/twenty"
                        android:layout_marginEnd="@dimen/sixteen"
                        android:layout_centerInParent="true"
                        android:layout_toEndOf="@+id/point_qualification"
                        android:text="@string/of_point" />
                </LinearLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/element"

            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressBarCircle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/ninety"
                android:layout_height="@dimen/ninety"
                android:layout_alignParentBottom="true"
                android:background="@drawable/circle_2"
                android:indeterminate="false"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/circle_1"
                android:rotation="-90" >
            </ProgressBar>

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/twentyFive"
                android:layout_marginStart="@dimen/twentyFive"
                android:layout_marginBottom="39dp"
                android:text="@string/time"
                android:textColor="@color/blueDark"
                android:textSize="@dimen/tenText" />

            <Button
                android:id="@+id/btnStar"
                android:background="@color/blueLight"
                android:textColor="@color/white"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/twenty"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/twenty"
                android:layout_marginEnd="@dimen/sixteen"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/progressBarCircle"
                android:text="@string/start" />

            <Button
                android:id="@+id/btnEnd"
                android:background="@color/blueLight"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/sixteen"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/twenty"
                android:layout_toEndOf="@+id/btnStar"
                android:text="@string/end" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>