<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.carer.TestFragment"
    android:background="@color/grayLight"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/cv_1"
        app:cardCornerRadius="15dp">

        <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">
                <LinearLayout
                    android:layout_marginTop="@dimen/ten"
                    android:id="@+id/test_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:text="@string/test"></TextView>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/cont_test"
                    android:layout_marginTop="@dimen/sixteen"
                    android:layout_width="match_parent"
                    android:layout_below="@id/test_title"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/tq1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:clickable="true"
                        android:textAllCaps="false"
                        android:padding="4dp"
                        android:gravity="left"
                        android:textSize="20dp"
                        android:enabled="true"
                        android:text="@string/tq1"></Button>
                    <com.codesgood.views.JustifiedTextView
                        android:id="@+id/t1"
                        android:layout_below="@+id/tq1"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="@string/test1"/>

                    <Button
                        android:id="@+id/tq2"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_below="@+id/t1"
                        android:background="@color/white"
                        android:clickable="true"
                        android:enabled="true"
                        android:visibility="gone"
                        android:gravity="left"
                        android:textSize="20dp"
                        android:text="@string/tq2"></Button>
                    <com.codesgood.views.JustifiedTextView
                        android:id="@+id/t2"
                        android:layout_below="@+id/tq2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:text="@string/test2"/>

            <Button
                android:id="@+id/tq3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_below="@+id/t2"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="left"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:enabled="true"
                android:visibility="gone"
                android:text="@string/tq3"></Button>
            <com.codesgood.views.JustifiedTextView
                android:id="@+id/t3"
                android:layout_below="@+id/tq3"
                android:textSize="18dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/test3"/>
            <Button
                android:id="@+id/tq4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/t3"
                android:background="@color/white"
                android:clickable="true"
                android:textAllCaps="false"
                android:padding="4dp"
                android:gravity="left"
                android:textSize="20dp"
                android:enabled="true"
                android:visibility="gone"
                android:text="@string/tq4"></Button>
            <com.codesgood.views.JustifiedTextView
                android:id="@+id/t4"
                android:layout_below="@+id/tq4"
                android:textSize="18dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/test4"/>

            <Button
                android:id="@+id/tq5"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_below="@+id/t4"
                android:background="@color/white"
                android:clickable="true"
                android:enabled="true"
                android:visibility="gone"
                android:gravity="left"
                android:textSize="20dp"
                android:text="@string/tq5"></Button>
            <com.codesgood.views.JustifiedTextView
                android:id="@+id/t5"
                android:layout_below="@+id/tq5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:visibility="gone"
                android:text="@string/test5"/>

            <Button
                android:id="@+id/tq6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_below="@+id/t5"
                android:background="@color/white"
                android:clickable="true"
                android:gravity="left"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:enabled="true"
                android:visibility="gone"
                android:text="@string/tq6"></Button>
            <com.codesgood.views.JustifiedTextView
                android:id="@+id/t6"
                android:layout_below="@+id/tq6"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/test6"/>
            <Button
                android:id="@+id/tq7"
                android:layout_below="@id/t6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="true"
                android:textAllCaps="false"
                android:padding="4dp"
                android:gravity="left"
                android:textSize="20dp"
                android:enabled="true"
                android:visibility="gone"
                android:text="@string/tq7"></Button>
            <com.codesgood.views.JustifiedTextView
                android:id="@+id/t7"
                android:layout_below="@+id/tq7"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/test7"/>

            <Button
                android:id="@+id/tq8"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
