<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.patient.HomeChildFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerViewHome"
            android:visibility="invisible"
            tools:listitem="@layout/item_memorizame_recycler"
            />

        <LinearLayout
            android:id="@+id/layout_description_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/twenty">

            <TextView
                android:id="@+id/lbl_memohome_name"
                style="@style/StyleCardViewTitles"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thirty"
                android:text="@string/tab_home_questions"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/iv_memogame_home"
                android:layout_width="@dimen/oneHundredFifty"
                android:layout_height="@dimen/oneHundredFifty"
                android:src="@drawable/img_home_card" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/sixteen"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    style="@style/StyleCardViewSubTitles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two"
                    android:text="@string/lbl_description" />

                <TextView
                    android:id="@+id/lbl_memohome_desc"
                    style="@style/StyleCardViewDescriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_description_home"/>

                <TextView
                    style="@style/StyleCardViewSubTitles"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyFive"
                    android:layout_marginTop="@dimen/five"
                    android:text="@string/lbl_instructions" />

                <TextView
                    android:id="@+id/lbl_memohome_ins"
                    style="@style/StyleCardViewDescriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_instructions_questions" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>