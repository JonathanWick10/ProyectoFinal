<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentList"
        android:name="com.jonathan.proyectofinal.fragments.carer.MemorizameFamilyFragment"
        tools:layout="@layout/fragment_memorizame_grid"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:drawSelectorOnTop="false"

        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:layout_below="@id/fragmentList"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="12">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_family_1"
            style="@style/StyleCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/oneHundredNinetyFour"
                android:src="@drawable/img_selfcarer"
                android:scaleType="centerCrop"/>

            <TextView
                style="@style/StyleSubsCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_image"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_family_2"
            style="@style/StyleCardView"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/oneHundredNinetyFour"
                android:src="@drawable/img_selfcarer"
                android:scaleType="centerCrop"/>

            <TextView
                style="@style/StyleSubsCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tab_family_questions"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_family_3"
            style="@style/StyleCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/oneHundredNinetyFour"
                android:src="@drawable/img_selfcarer"
                android:scaleType="centerCrop"/>

            <TextView
                style="@style/StyleSubsCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tab_family_questions"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_family_4"
            style="@style/StyleCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:visibility="gone"
            android:layout_columnWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/oneHundredNinetyFour"
                android:src="@drawable/img_selfcarer"
                android:scaleType="centerCrop"/>

            <TextView
                style="@style/StyleSubsCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tab_family_questions"/>
        </com.google.android.material.card.MaterialCardView>




    </GridLayout>

    </RelativeLayout>
</FrameLayout>