<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.patient.PetsChildFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerViewPets"
            tools:listitem="@layout/item_memorizame_recycler"
            />

        <LinearLayout
            android:id="@+id/layout_description_pets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_memogame_pets"
                    android:layout_width="@dimen/oneHundredFifty"
                    android:layout_height="@dimen/oneHundredFifty"
                    android:src="@drawable/img_pets_card" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/sixteen"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_memopets_name"
                        style="@style/StyleCardViewTitles"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/thirty"
                        android:text="Mascotas" />

                    <TextView
                        style="@style/StyleCardViewSubTitles"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/twentyFive"
                        android:layout_marginTop="@dimen/two"
                        android:text="@string/lbl_description" />

                    <TextView
                        android:id="@+id/lbl_memopets_desc"
                        style="@style/StyleCardViewDescriptions"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/twentyFive"
                        android:text="Juego que determina, que recuerdas de alguna mascota." />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>