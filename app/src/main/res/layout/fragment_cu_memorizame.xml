<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayLight"
    android:orientation="vertical"
    android:padding="6dp"
    tools:context=".fragments.carer.MemorizameFragment"
    app:layout_constraintCircleRadius="@dimen/twenty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/round_corner">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="2">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_family"
                style="@style/StyleCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oneHundredNinetyFour"
                    android:src="@drawable/img_family"
                    android:scaleType="centerCrop"/>

                <TextView
                    style="@style/StyleSubsCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_family_questions"/>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_home"
                style="@style/StyleCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oneHundredNinetyFour"
                    android:src="@drawable/img_home"
                    android:scaleType="centerCrop"/>

                <TextView
                    style="@style/StyleSubsCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_home_questions"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_places"
                style="@style/StyleCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oneHundredNinetyFour"
                    android:src="@drawable/img_places"
                    android:scaleType="centerCrop"/>

                <TextView
                    style="@style/StyleSubsCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_places_questions"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_pets"
                style="@style/StyleCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/oneHundredNinetyFour"
                    android:src="@drawable/img_pets"
                    android:scaleType="centerCrop"/>

                <TextView
                    style="@style/StyleSubsCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_pets_questions"/>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/containerMemorizame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="30dp"></FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>