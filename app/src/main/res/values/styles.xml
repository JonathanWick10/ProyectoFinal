<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Estilo estándar para layout de cajas de texto (Login)-->
    <style name="StyleTextViewTitles">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo estándar para botones -->
    <style name="StylePrimaryColoredButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!--<item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>-->
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="cornerRadius">20dp</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="iconPadding">15dp</item>
    </style>

    <!-- Estilo estándar para layout de cajas de texto (Login)-->
    <style name="StyleTextInputLayotTextBoxLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="endIconTint">@color/colorPrimary</item>
    </style>

    <!-- Estilo estándar para layout de cajas de texto (Formularios)-->
    <style name="StyleTextInputLayotTextBoxForms" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/colorBackround</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- Estilo estándar para layout de listas desplegables (Formularios)-->
    <style name="StyleTextInputLayotDropDownForms" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/colorBackround</item>
    </style>

    <!-- Estilo estándar para cajas de texto -->
    <style name="StyleTextInputEditText">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Estilo estándar para radio botones -->
    <style name="StyleRadioButtonForms" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Estilo estándar para imagen botone de calendario -->
    <style name="StyleImageButtonCalendar" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="android:background">@color/colorBackround</item>
        <item name="android:src">@drawable/ic_calendar</item>
    </style>

</resources>
